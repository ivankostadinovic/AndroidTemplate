<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.exoplayer2.ui.DefaultTimeBar
        android:id="@id/exo_progress"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:nextFocusLeft="@id/exo_progress"
        android:nextFocusRight="@id/exo_progress"
        android:nextFocusDown="@id/layout_play_pause"
        app:played_color="@color/colorPrimary"
        app:scrubber_color="@android:color/transparent"
        app:unplayed_color="#7a7a7a" />

    <ImageButton
        android:id="@id/exo_rew"
        style="@style/ExoMediaButton.Rewind"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:tint="@color/button_color_player_focused"
        android:tintMode="src_in" />

    <FrameLayout
        android:id="@+id/layout_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:descendantFocusability="afterDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageButton
            android:id="@id/exo_play"
            style="@style/ExoMediaButton.Play"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/exo_rew"
            android:nextFocusRight="@id/exo_ffwd"
            android:tint="@color/button_color_player_focused"
            android:tintMode="src_in" />

        <ImageButton
            android:id="@id/exo_pause"
            style="@style/ExoMediaButton.Pause"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/exo_rew"
            android:nextFocusRight="@id/exo_ffwd"
            android:tint="@color/button_color_player_focused"
            android:tintMode="src_in" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>